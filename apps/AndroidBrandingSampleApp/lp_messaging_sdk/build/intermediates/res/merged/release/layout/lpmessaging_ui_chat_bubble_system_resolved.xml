<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/margin_half"
    android:gravity="right"
    android:clickable="true"
    android:background="@drawable/lpmessaging_ui_background_color_selector"
    android:descendantFocusability="blocksDescendants"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <TextView
        android:id="@+id/lpui_message_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/margin_half"
        android:textSize="@dimen/regular_text_size"
        android:textColor="@color/conversation_separator_text_color"/>

    <View
        android:id="@+id/lpui_conversation_separator_line"
        android:background="@color/conversation_separator_text_color"
        android:layout_width = "match_parent"
        android:layout_height="@dimen/margin_divider"/>
</LinearLayout>