<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:padding="5dp">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="50dp">


        <TextView
            android:id="@+id/lpui_message_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/lpinfra_ui_chat_bubble_start"
            android:layerType="software"
            android:text="Hello Jasper!\nHow can i help you today?"
            android:textColor="#123456"
            android:textColorLink="#123456"
            android:textIsSelectable="true"
            android:textSize="14sp"/>


        <TextView
            android:id="@+id/lpui_message_timestamp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/lpui_message_text"
            android:layout_below="@id/lpui_message_text"
            android:layout_marginRight="7dp"
            android:layout_marginTop="2dp"
            android:text="10:10"
            android:textColor="#223344"
            android:textSize="12sp"/>
    </RelativeLayout>

</RelativeLayout>