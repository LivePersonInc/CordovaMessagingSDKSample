<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/margin_double">

    <TextView
        android:id="@+id/lpui_mark_as_urgent"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/margin_half"
        android:layout_weight="1"
        android:background="@drawable/lpmessaging_ui_menu_rect"
        android:drawablePadding="@dimen/margin_half"
        android:drawableTop="@drawable/lpmessaging_ui_urgent"
        android:gravity="center"
        android:lines="2"
        android:maxLines="2"
        android:text="@string/lp_mark_as_urgent_menu_text"
        android:textColor="#efefef"
        android:visibility="gone"
        android:textSize="@dimen/small_text_size" />

    <TextView
        android:id="@+id/lpui_mark_as_resolved"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/margin_half"
        android:layout_weight="1"
        android:background="@drawable/lpmessaging_ui_menu_rect"
        android:drawablePadding="@dimen/margin_half"
        android:drawableTop="@drawable/lpmessaging_ui_resolved"
        android:gravity="center"
        android:lines="2"
        android:maxLines="2"
        android:text="@string/lp_mark_as_resolved_menu_text"
        android:textColor="#efefef"
        android:textSize="@dimen/small_text_size" />
</LinearLayout>